<h1>New Game</h1>
<hr>
<ul>
  <% @rand_letters.each do |letter| %>
    <li style="display: inline"><%= letter.upcase %></li>
  <% end %>
</ul>
<hr>
<form action="/score" method="post">
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit" value="Play">
   <%= hidden_field_tag :rand_letters, @rand_letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
